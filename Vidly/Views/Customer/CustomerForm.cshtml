@model Vidly.ViewModels.CustomerFormViewModel
@{
	ViewBag.Title = "Add";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customer Form</h2>

@using (Html.BeginForm("Save", "Customer"))
{
	<div class="form-group">
		@Html.LabelFor(m => m.Customer.Name)
		@Html.TextBoxFor(m => m.Customer.Name, new { @class = "form-control" })
		@Html.ValidationMessageFor(m=>m.Customer.Name)
	</div>
	<div class="form-group">
		@Html.LabelFor(m => m.Customer.BirthDate)
		@Html.TextBoxFor(m => m.Customer.BirthDate, new { @class = "form-control" })
	</div>
	<div class="checkbox">
		<label>
			@Html.CheckBoxFor(m => m.Customer.IsSubscribedToNewsLetter)Subscribed to News Letter
		</label>
	</div>
	<div class="form-group">
		@Html.LabelFor(m => m.Customer.MembershipTypeId)
		@Html.DropDownListFor(m => m.Customer.MembershipTypeId, new SelectList(Model.MembershipTypes, "Id", "MembershipTypeName"),"Select Membership Type", new { @class = "form-control" })
	</div>
	@Html.HiddenFor(m=>m.Customer.Id)
	@Html.AntiForgeryToken()
	<button class="btn btn-primary" type="submit">Save</button>
}

@section scripts{
	@Scripts.Render("~/bundles/jqueryval")
}

